<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/vendorTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vendorDetailsText"
        android:textSize="16sp"
        android:lineHeight="25.6sp"
        android:textFontWeight="500"
        android:textColor="@color/vendor_header"
        tools:text="Dummy text"


        />
    <TextView
        android:id="@+id/vendorDetailsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vendorTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        tools:text="hey hey"
        app:layout_constraintStart_toStartOf="@id/vendorTitleText"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:lineHeight="22.4sp"
        android:textColor="@color/vendor_subheader"
        />

</androidx.constraintlayout.widget.ConstraintLayout>