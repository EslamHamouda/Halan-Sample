<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="21dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_merchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="25.6sp"
            android:lineSpacingExtra="2sp"
            tools:text="فرع مدينتي"
            android:textColor="#1C211F"
            android:textFontWeight="500"
            android:textSize="16sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_merchantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="22.4sp"
            android:lineSpacingExtra="2sp"
            tools:text="مدينتي , ارابيسك مول , رقم B7"
            android:textColor="#5E6160"
            android:textFontWeight="500"
            android:textSize="14sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_map"
        app:layout_constraintBottom_toBottomOf="@+id/iv_phone"
        app:layout_constraintEnd_toStartOf="@+id/iv_phone"
        app:layout_constraintTop_toTopOf="@+id/iv_phone"
        android:focusable="true" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginVertical="21dp"
        android:src="@drawable/icon_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>